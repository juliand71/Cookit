@page
@model Cookit.WebApp.Pages.Recipes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.RecipeEquipment)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Name</th>
                </tr>
                @foreach (var item in Model.Recipe.RecipeEquipment)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Equipment.Name)
                        </td>
                    </tr>
                }
            </table>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.IngredientAmounts)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Inregient</th>
                    <th>Quantity</th>
                    <th>Unit</th>
                </tr>
                @foreach (var item in Model.Recipe.IngredientAmounts)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ingredient.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Unit)
                        </td>
                    </tr>
                }
            </table>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Instructions)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Step</th>
                    <th>Description</th>
                </tr>
                @foreach (var item in Model.Recipe.Instructions)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Step)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Recipe.RecipeID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
